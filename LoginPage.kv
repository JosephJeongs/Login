<LoginManager>:
    LoginPageScreen:
        name: "loginpage"
    AccountRegisterScreen:
        name: "registerpage"
    LoggedInScreen:
        name: "loggedinpage"



<LoginPageScreen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Username"
                size_hint: .15,.1
                pos_hint: {"center_y":.45}
            TextInput:
                id: user
                hint_text: "Enter username"
                size_hint: .15,.1
                pos_hint: {"center_y":.45}
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Password"
                size_hint: .15,.1
                pos_hint: {"center_y":1}
            TextInput:
                id: password
                hint_text: "Enter password"
                size_hint: .15,.1
                pos_hint: {"center_y":1}
        Button:
            text: "Register Account"
            size_hint: .25,.15
            pos_hint: {"center_x":.5}
            on_release: root.accountregister(True)
        Button:
            text: "Enter"
            size_hint: .25,.15
            pos_hint: {"center_x":.5}
            on_release: root.userinfo(user.text, password.text)





<AccountRegisterScreen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                text: "Enter new username"
                size_hint: .15,.1
                pos_hint: {"center_y": .6}
            TextInput:
                id: newuser
                hint_text: "username"
                size_hint: .15,.25
                pos_hint: {"center_y": .6}
        BoxLayout:
            Label:
                text: "Enter new password"
                size_hint: .15,.1
                pos_hint: {"center_y": .5}
            TextInput:
                id: newpass
                hint_text: "password"
                size_hint: .15,.25
                pos_hint: {"center_y": .5}
        BoxLayout:
            Label:
                text: "Confirm new password"
                size_hint: .15,.1
                pos_hint: {"center_y": .4}
            TextInput:
                id: confirmpass
                hint_text: "confirm"
                size_hint: .15,.25
                pos_hint: {"center_y": .4}
        BoxLayout:
            Label:
                text: "Password must contain at least one of each requirement:\n- Capitalized letter (e.g.: ABC...XYZ)\n- Lowercase letter (e.g.: abc...xyz)\n- Number (1234567890)\n- Special Character (e.g.: ~!@#$%^&*)\n- Username & passowrd must be at least 8 characters"
        Button:
            text: "Create Account"
            size_hint: .15,.1
            pos_hint: {"center_x": .5}
            on_release: root.createaccount(newuser.text, newpass.text, confirmpass.text)
        Button:
            text: "Cancel"
            size_hint: .15,.1
            pos_hint: {"center_x": .5}
            on_release: root.goback(True)






<LoggedInScreen>:
    Label:
        text: "Welcome"
        size_hint:1, .5
        pos_hint: {"center_y":.7}
    Button:
        text: "Logout"
        size_hint: .3,.2
        pos_hint: {"center_x":.5}
        on_release: root.logout(True)
